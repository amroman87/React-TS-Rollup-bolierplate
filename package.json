{
  "name": "my-library",
  "version": "0.0.1",
  "description": "Setup for React+TypeScript+Rollup project",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.iife.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "clear": "rm -rf dist",
    "dev": "npm run clear && run-p dev:*",
    "dev:js": "npx rollup -c -w",
    "dev:html": "npx browser-sync start --watch --server --port 8081 --files 'public/*' 'dist/*' --index public/index.html",
    "build": "npm run clear && npx rollup -c --environment NODE_ENV:production",
    "test": "jest"
  },
  "author": "Antonio Roman",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/preset-env": "^7.14.0",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/react-shadow-dom-retarget-events": "^1.0.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.46.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "dependencies": {
    "react-shadow-dom-retarget-events": "^1.0.11"
  }
}
